<h1>Your Reservations</h1>
<table class="table container-fluid table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">People</th>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">E-mail</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>

<% var count =1; %>
<%    users.forEach(function(users){ %>
         <tr>
        <td scope="row"><strong><%= count %></strong></td>
        <td><%= users.name %></td>
        <td><%= users.table_for %></td>
        <td><%= users.date %></td>
        <td><%= users.time %></td>
        <td><%= users.email %></td>
        <td><%= users.phone %></td>
        <td>
          <a class="btn btn-outline-secondary options" role="button" href="#">Modify</a>
          <a class="btn btn-outline-danger options" role="button" href="#">Cancel</a>
          </tr>
          <%count++;%>
 <%  }); %>

  </tbody>
</table>
