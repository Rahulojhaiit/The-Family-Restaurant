  <section id="reservation">
    <div id="reservation">
      <div class="table unreg">
        <h1>Book a table</h1>
        <form class="container">
          <div class="form-group">
            <label for="name" class="first"><strong>Name</strong></label>
            <input type="text" placeholder="Please enter your name" name="name" class="form-control nonreg"  disabled>
          </div>

          <div class="form-group">
            <label for="table"><strong>Table For</strong></label>
            <input type="number" placeholder="Please enter number of persons" name="table"  class="form-control nonreg"   disabled>
          </div>

      <div class="form-group">
        <label for="date"><strong>Date</strong></label>
        <input type="date" name="date" class="form-control" id="datePickerId" required disabled>
      </div>

      <div class="form-group">
        <label for="bookingt"><strong>Choose a time for your visit:</strong></label>
        <input type="time" id="bookingt" name="bookingt" class="form-control" min="09:00" max="22:00" title="We are open from 9am to 10pm" required disabled>
        <small>We are open from 9am to 10pm</small>
      </div>

      <div class="form-group">
        <label for="email"><strong>E-mail</strong></label>
        <input type="email" placeholder="Please enter your email" name="email" class="form-control" required disabled>
      </div>

      <div class="form-group">
        <label for="phone"><strong>Phone Number</strong></label>
        <input type="text" placeholder="Please enter your phone number" name="phone" pattern="[789][0-9]{9}" title="Must contain 10 digits without country code" class="form-control" required disabled>
      </div>



            <span class="login-request" style="color:#fff;display:block;">Please <a href="/login"><em><u  >login</u></em></a> to book a table</span>
            <br />
            <button type="submit" class="btn btn-outline-light" disabled>Book</button>
        </form>

    </div>

    </div>
