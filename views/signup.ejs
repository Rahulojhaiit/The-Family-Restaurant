  <section class="signup-form container-fluid" style="max-width: 600px;">
    <div class="Oauth">

        <div class="card social-block">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
              <i class="fab fa-facebook-f"></i>
              Sign Up with Facebook
            </a>
          </div>

          <div class="card-body">
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign Up with Google
            </a>
          </div>
        </div>

      <p class="divider-text">
        <span class="bg-col">OR</span>
      </p>
    </div>


    <form class="container-fluid" action="/signup" method="POST">
      <div class="form-group">
        <label for="name"><strong>Name</strong></label>
        <input type="text" name="name" placeholder="Enter your full name" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="email"><strong>E-Mail</strong></label>
        <input type="email" name="username" placeholder="Enter your e-mail" class="form-control" required  >
      </div>

      <div class="form-group">
        <label for="password1"><strong>Password</strong></label>
        <input type="password" name="password" id="password" placeholder="Enter your password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="password2"><strong>Re-enter password</strong></label>
        <input type="password" name="password2" id="password2" placeholder="Confirm your password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" class="form-control" required>
      </div>
      <div class="form-group">
  <span id='message'></span>
      </div>

          <button type="submit" name="button" class="btn btn-block btn-dark">Sign-Up</button>
    </form>


  </section>

<br>
  
</body>
</html>
